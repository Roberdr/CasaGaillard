@model IEnumerable<CasaGaillard.Models.Vehiculo>

@{
    ViewBag.Title = "Vehículos";
}

<h2 class="text-center "><i class="fa fa-car text-success"></i> Vehículos</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoVehiculo.Vehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatriculaVehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tara)
        </th>
        <th>
            @*<button type="button"
                    class="btn btn-success"
                    data-target="#editmodal"
                    data-toggle="modal"
                    data-url="@Url.Action("AddOrEdit", "Vehiculos")">
                    <i class="fa fa-random"></i>
                Nuevo Vehículo
            </button>*@
            <a onclick="modalvehiculos('@Url.Action("AddOrEdit","Vehiculos", new { area = "Mantenimiento"})','Nuevo Vehículo', null)" class="btn btn-sm btn-success text-white">
                <i class="fa fa-random"></i> Nuevo Vehículo
            </a>
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TipoVehiculo.Vehiculo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Marca)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Modelo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MatriculaVehiculo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pma)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tara)
    </td>
    <td class="text-center">
        <a onclick="modalvehiculos('@Url.Action("AddOrEdit","Vehiculos", new { area = "Mantenimiento", id = item.ID })','Editar Vehículo', null)" class="btn btn-sm btn-outline-primary text-primary">
            <i class="fa fa-sm fa-pen"></i>
        </a>
        <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-sm btn-outline-danger text-danger">
            <i class="fa fa-sm fa-trash"></i>
        </a>
    </td>
</tr>
}

</table>
<div class="row">
    <div class="modal fade modal-dialog-centered" tabindex="-1" id="editmodal" aria-hidden="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>

