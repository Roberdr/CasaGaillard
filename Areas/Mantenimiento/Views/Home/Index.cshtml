@model IEnumerable<CasaGaillard.Areas.Mantenimiento.Controllers.HomeController.UltimasRevisiones>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>CASA GAILLARD S.A.</h1>
    <p class="lead">Aplicación para el control del mantenimiento en general de la empresa.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
   
    <div class="col-md-4">
        <h2>Próximas Revisiones de Cubas</h2>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="col-md-6">Matrícula</th>
                        <th class="col-md-6">Validez</th>
                    </tr>

                </thead>
                @foreach (var c in ViewBag.Revis)
                {
                    <tr>
                        <td class="col-md-6">@c.MatriculaCuba</td>
                        <td class="col-md-6">@c.ValidaHasta.ToString("d")</td>

                    </tr>
                }
            </table>

        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
  
    <div class="col-md-4">
        <h2>Próximas ITVs de vehículos</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Resto de mantenimiento</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>