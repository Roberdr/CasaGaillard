@model CasaGaillard.Models.Cuba

<div class="row">
    <div class="form-group col-4">
        @Html.LabelFor(model => model.FechaConstruccion, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.FechaConstruccion, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
    </div>
    <div class="form-group col-4">
        @Html.LabelFor(model => model.NumFabricacion, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.NumFabricacion, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
    </div>
    <div class="form-group col-4">
        @Html.LabelFor(model => model.NumAprobacionCSC, htmlAttributes: new { @class = "control-label" })
