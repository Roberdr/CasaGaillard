@model CasaGaillard.Models.Cuba

@{ 
    var nf = 0;
    foreach(var f in ViewBag.files)
    {
        nf++;
    }
}

@if (nf == 0)
{
    <p>
        <h2>NO EXISTEN IMÁGENES DE ESTA CUBA.</h2>
    </p>
}
else
{
<div id="carouselCubas" class="carousel slide" data-ride="carousel" data-interval="3000" data-pause="hover" data-wrap="true">
    <ol class="carousel-indicators">
        @{
            var contador = 0;
        }
        @foreach (var a in ViewBag.files)
        {
            var act = (contador == 0) ? "active" : "";
            <li data-target="#carouselCubas" data-slide-to="@contador" class="@act"></li>
        }

    </ol>
    <div class="carousel-inner">
        @{
            String m = "../../../Content/images/" + Model.MatriculaCuba.ToString();
            var c = 0;
        }
        @foreach (var a in ViewBag.files)
        {
            var p = m + a;
            var cl = (c == 0) ? "carousel-item active" : "carousel-item";
            <div class="@cl">
                <img src="@p" class="d-block w-100">
                @*<div class="carousel-caption d-none d-md-block">
                        <h5>First slide label</h5>
                        <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                    </div>*@
            </div>
            c++;
        }

    </div>
    <a class="carousel-control-prev" href="#carouselCubas" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselCubas" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>
}

