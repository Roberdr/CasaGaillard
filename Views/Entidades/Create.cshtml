@model CasaGaillard.Models.Entidad

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Entidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NombreEntidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreEntidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreEntidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CIF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CIF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CIF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DireccionID, "Dirección", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="row ">
                    @Html.DropDownList("DireccionID", null, "Seleccionar...", htmlAttributes: new { @class = "form-control col-md-5" })
                    <div class="offset-1 col-md-auto">
                        <button type="button"
                           class="btn btn-primary"
                           data-target="#nueva-direccion"
                           data-toggle="ajax-modal"
                            data-url="@Url.Action("Create", "Direcciones")">Nueva Dirección</button>
                    </div>
                    
                    @*@Html.ActionLink("Nueva", "Create", "Direcciones", new { area = "" },
                                        htmlAttributes: new { @class = "btn btn-primary offset-1 col-md-1", data_toggle = "modal" })*@

                </div>
                @Html.ValidationMessageFor(model => model.DireccionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
}

